<archetype-descriptor
        name="spigot-plugin"
        partial="false">

    <!-- I only want to get the requiredProperty's from inside this block -->
    <requiredProperties>

        <requiredProperty key="pluginName" name="Plugin Name" type="text"> <!-- readme -->
            <defaultValue>MyPlugin</defaultValue>
            <validationRegex>[a-zA-Z0-9_]+</validationRegex>
        </requiredProperty>

        <requiredProperty key="author" name="Author" type="text" separator="true"> <!-- readme -->
            <defaultValue>Joe Mama</defaultValue>
        </requiredProperty>

        <!--  Separator  -->

        <requiredProperty key="groupId" name="Group ID" type="text">
            <defaultValue>org.example</defaultValue>
        </requiredProperty>

        <requiredProperty key="artifactId" name="Artifact ID" type="text">
            <defaultValue>my-plugin</defaultValue>
            <!--            <validationRegex>[a-z][a-z0-9-]*</validationRegex>-->
        </requiredProperty>

        <requiredProperty key="version" name="Version" type="text" separator="true">
            <defaultValue>1.0-SNAPSHOT</defaultValue>
            <!--            <validationRegex>[0-9]+(\.[0-9]+)*(-[a-zA-Z0-9]+)?</validationRegex>-->
        </requiredProperty>

        <!--  Separator  -->

        <requiredProperty key="package" name="Package" type="text"> <!-- readme -->
            <defaultValue>com.example.myplugin</defaultValue>
        </requiredProperty>

        <requiredProperty key="mainClass" name="Main Class" type="text" separator="true"> <!-- readme -->
            <defaultValue>MyPlugin</defaultValue>
            <validationRegex>([\p{L}_$][\p{L}\p{N}_$]*\.)*[\p{L}_$][\p{L}\p{N}_$]*</validationRegex>
        </requiredProperty>

        <!--  Separator  -->

        <requiredProperty key="spigotVersion" name="spigotVersion" type="text"> <!-- readme -->
            <defaultValue>1.19.3</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependNMS" name="Include NMS / CraftBukkit dependency" type="checkbox"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="javaVersion" name="Java Version" type="text"> <!-- readme -->
            <defaultValue>8</defaultValue>
        </requiredProperty>

        <requiredProperty key="pathToTestServer"> <!-- readme -->
            <defaultValue>C:\mctest\plugins</defaultValue>
        </requiredProperty>

        <requiredProperty key="addStaticGetter"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependLombok"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependJeffLib"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependVault"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependACF"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependMockBukkit"> <!-- readme -->
            <defaultValue>true</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependMorePersistentDataTypes"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependCustomBlockData"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependProtocolLib"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependWorldEdit"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependWorldGuard"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependSpigotUpdateChecker"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

    </requiredProperties>

    <fileSets>
        <fileSet encoding="UTF-8" filtered="true" packaged="true">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true" packaged="true">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="false">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>