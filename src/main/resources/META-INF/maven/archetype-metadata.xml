<archetype-descriptor
        name="spigot-plugin"
        partial="false">
    <requiredProperties>

        <requiredProperty key="pluginName"> <!-- readme -->
            <defaultValue>MyPlugin</defaultValue>
            <validationRegex>[a-zA-Z0-9_]+</validationRegex>
        </requiredProperty>

<!--        <requiredProperty key="groupId">-->
<!--            <defaultValue>my.groupid</defaultValue>-->
<!--            <validationRegex>([\p{L}_$][\p{L}\p{N}_$]*\.)*[\p{L}_$][\p{L}\p{N}_$]*</validationRegex>-->
<!--        </requiredProperty>-->

        <requiredProperty key="description"> <!-- readme -->
            <defaultValue> </defaultValue>
        </requiredProperty>

        <requiredProperty key="author"> <!-- readme -->
            <defaultValue>Someone</defaultValue>
        </requiredProperty>

        <requiredProperty key="package"> <!-- readme -->
            <defaultValue>com.example.myplugin</defaultValue>
        </requiredProperty>

        <requiredProperty key="mainClass"> <!-- readme -->
            <defaultValue>MyPlugin</defaultValue>
            <validationRegex>([\p{L}_$][\p{L}\p{N}_$]*\.)*[\p{L}_$][\p{L}\p{N}_$]*</validationRegex>
        </requiredProperty>

        <requiredProperty key="spigotVersion"> <!-- readme -->
            <defaultValue>1.19.3</defaultValue>
        </requiredProperty>

        <requiredProperty key="javaVersion"> <!-- readme -->
            <defaultValue>8</defaultValue>
        </requiredProperty>

        <requiredProperty key="pathToTestServer"> <!-- readme -->
            <defaultValue>C:\mctest\plugins</defaultValue>
        </requiredProperty>

        <requiredProperty key="addStaticGetter"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependLombok"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependNMS"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependJeffLib"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependVault"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependACF"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependMockBukkit"> <!-- readme -->
            <defaultValue>true</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependMorePersistentDataTypes"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependCustomBlockData"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependProtocolLib"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependWorldEdit"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependWorldGuard"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependSpigotUpdateChecker"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

    </requiredProperties>

    <fileSets>
        <fileSet encoding="UTF-8" filtered="true" packaged="true">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true" packaged="true">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="false">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>