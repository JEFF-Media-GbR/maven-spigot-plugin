<archetype-descriptor
        name="spigot-plugin"
        partial="false">

    <!-- I only want to get the requiredProperty's from inside this block -->
    <requiredProperties>

        <requiredProperty key="pluginName" name="Plugin Name" type="text"> <!-- readme -->
            <defaultValue>MyPlugin</defaultValue>
            <validationRegex>[a-zA-Z0-9_]+</validationRegex>
        </requiredProperty>

        <requiredProperty key="author" name="Author" type="text" separator="true"> <!-- readme -->
            <defaultValue>Joe Mama</defaultValue>
        </requiredProperty>

        <!--  Separator  -->

        <requiredProperty key="groupId" name="Group ID" type="text">
            <defaultValue>org.example</defaultValue>
        </requiredProperty>

        <requiredProperty key="artifactId" name="Artifact ID" type="text">
            <defaultValue>my-plugin</defaultValue>
            <!--            <validationRegex>[a-z][a-z0-9-]*</validationRegex>-->
        </requiredProperty>

        <requiredProperty key="version" name="Version" type="text" separator="true">
            <defaultValue>1.0-SNAPSHOT</defaultValue>
            <!--            <validationRegex>[0-9]+(\.[0-9]+)*(-[a-zA-Z0-9]+)?</validationRegex>-->
        </requiredProperty>

        <!--  Separator  -->

        <requiredProperty key="package" name="Package" type="text"> <!-- readme -->
            <defaultValue>com.example.myplugin</defaultValue>
        </requiredProperty>

        <requiredProperty key="mainClass" name="Main Class" type="text" separator="true"> <!-- readme -->
            <defaultValue>MyPlugin</defaultValue>
            <validationRegex>([\p{L}_$][\p{L}\p{N}_$]*\.)*[\p{L}_$][\p{L}\p{N}_$]*</validationRegex>
        </requiredProperty>

        <!--  Separator  -->

        <requiredProperty key="spigotVersion" name="Spigot Version" type="text"> <!-- readme -->
            <defaultValue>1.19.3</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependNMS" name="Include NMS / CraftBukkit dependency" type="checkbox"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="javaVersion" name="Java Version" type="text"> <!-- readme -->
            <defaultValue>8</defaultValue>
        </requiredProperty>

        <requiredProperty key="pathToTestServer" name="Path to Test Server" type="text"> <!-- readme -->
            <defaultValue>C:\mctest\plugins</defaultValue>
        </requiredProperty>

        <requiredProperty key="addStaticGetter" name="Add static getter to main class" type="checkbox"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="useKotlin" name="Use Kotlin instead of Java" type="checkbox"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependLombok" name="Lombok" type="dependency" description="Annotation-based library to reduce boilerplate code"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependJeffLib" name="JeffLib" type="dependency" description="General purpose library including many NMS features"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependVault" name="Vault" type="dependency" description="Permissions, Chat and Economy API"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependACF" name="ACF" type="dependency" description="Annotation-based command framework"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependMockBukkit" name="MockBukkit" type="dependency" description="Unit Testing"> <!-- readme -->
            <defaultValue>true</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependMorePersistentDataTypes" name="MorePersistentDataTypes" type="dependency" description="Adds a ton of PersistentDataTypes and allows to use Maps, Arrays and Collections in PDC"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependCustomBlockData" name="CustomBlockData" type="dependency" description="PDC for Blocks"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependProtocolLib" name="ProtocolLib" type="dependency" description="ProtocolLib API"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependWorldEdit" name="WorldEdit" type="dependency" description="WorldEdit API"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependWorldGuard" name="WorldGuard" type="dependency" description="WorldGuard API (includes WorldEdit)"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependSpigotUpdateChecker" name="SpigotUpdateChecker" type="dependency" description="Powerful Update Checker library"> <!-- readme -->
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependTaskChain" name="TaskChain" type="dependency" description="Control Flow framework">
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependConfigurateGson" name="Configurate-Gson" type="dependency" description="Simple configuration library for JSON using Gson">
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependConfigurateHocon" name="Configurate-HOCON" type="dependency" description="Simple configuration library for HOCON">
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependConfigurateJackson" name="Configurate-Jackson" type="dependency" description="Simple configuration library for JSON using Jackson">
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependConfigurateXml" name="Configurate-XML" type="dependency" description="Simple configuration library for XML">
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependConfigurateYaml" name="Configurate-YAML" type="dependency" description="Simple configuration library for YAML">
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependRecordBuilder" name="RecordBuilder" type="dependency" description="RecordBuilder library (Java 16+)">
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependAdventure" name="Adventure-API" type="dependency" description="Adventure API">
            <defaultValue>false</defaultValue>
        </requiredProperty>

        <requiredProperty key="dependMiniMessage" name="MiniMessage" type="dependency" description="MiniMessage API">
            <defaultValue>false</defaultValue>
        </requiredProperty>

    </requiredProperties>

    <fileSets>
        <fileSet encoding="UTF-8" filtered="true" packaged="true">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true" packaged="true">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true" packaged="true">
            <directory>src/main/kotlin</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="false">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>